@model _125CNX_ECommerce.Models.ProductModel
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Thêm sản phẩm mới</h2>
        <p class="text-muted mb-0">Điền thông tin sản phẩm</p>
    </div>
    <a href="/Admin/Product" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Quay lại
    </a>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold mb-0">Thông tin cơ bản</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TenSP" class="form-label fw-semibold">Tên sản phẩm <span class="text-danger">*</span></label>
                        <input asp-for="TenSP" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm" required />
                        <span asp-validation-for="TenSP" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="C_ID" class="form-label fw-semibold">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="C_ID" class="form-select form-select-lg" required>
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var category in (List<_125CNX_ECommerce.Models.CategoriesModel>)ViewBag.Categories)
                                {
                                    <option value="@category.C_ID">@category.C_Name</option>
                                }
                            </select>
                            <span asp-validation-for="C_ID" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Gia" class="form-label fw-semibold">Giá bán <span class="text-danger">*</span></label>
                            <div class="input-group input-group-lg">
                                <input asp-for="Gia" type="number" class="form-control" placeholder="0" required />
                                <span class="input-group-text">đ</span>
                            </div>
                            <span asp-validation-for="Gia" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label asp-for="MauSac" class="form-label fw-semibold">Màu sắc <span class="text-danger">*</span></label>
                            <input asp-for="MauSac" class="form-control form-control-lg" placeholder="Ví dụ: Đen, Trắng" required />
                            <span asp-validation-for="MauSac" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="KichCo" class="form-label fw-semibold">Kích cỡ <span class="text-danger">*</span></label>
                            <input asp-for="KichCo" class="form-control form-control-lg" placeholder="Ví dụ: 42, 38" required />
                            <span asp-validation-for="KichCo" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="SoLuong" class="form-label fw-semibold">Số lượng <span class="text-danger">*</span></label>
                            <input asp-for="SoLuong" type="number" class="form-control form-control-lg" placeholder="0" min="0" required />
                            <span asp-validation-for="SoLuong" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Images" class="form-label fw-semibold">URL Hình ảnh <span class="text-danger">*</span></label>
                        <input asp-for="Images" class="form-control form-control-lg" placeholder="https://example.com/image.jpg" required />
                        <span asp-validation-for="Images" class="text-danger small"></span>
                        <small class="text-muted d-block mt-1">Nhập URL hình ảnh sản phẩm</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Preview -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold mb-0">Xem trước</h5>
                </div>
                <div class="card-body text-center">
                    <img id="imagePreview" src="https://via.placeholder.com/300x300?text=No+Image" 
                         alt="Preview" class="img-fluid rounded mb-3" style="max-height: 300px;">
                    <p class="text-muted mb-0">Hình ảnh sản phẩm</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                        <i class="bi bi-check-circle me-2"></i>Lưu sản phẩm
                    </button>
                    <a href="/Admin/Product" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-2"></i>Hủy bỏ
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Image preview
        document.querySelector('input[name="Images"]').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('imagePreview');
            if (url) {
                preview.src = url;
                preview.onerror = function() {
                    this.src = 'https://via.placeholder.com/300x300?text=Invalid+URL';
                };
            } else {
                preview.src = 'https://via.placeholder.com/300x300?text=No+Image';
            }
        });

        // Format price input
        document.querySelector('input[name="Gia"]').addEventListener('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}
