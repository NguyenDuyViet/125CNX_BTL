@model _125CNX_ECommerce.Models.UserModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="text-center mb-4">
    <div class="mb-3">
        <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #dc3545;"></i>
    </div>
    <h2 class="fw-bold mb-2">Tạo tài khoản mới</h2>
    <p class="text-muted">Điền thông tin để bắt đầu mua sắm</p>
</div>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<form asp-action="Register" asp-controller="Account" method="post">

    <div class="mb-3">
        <label asp-for="TenDangNhap" class="form-label fw-semibold">
            <i class="bi bi-person me-1"></i>Tên đăng nhập
        </label>
        <input asp-for="TenDangNhap" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập" />
        <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-semibold">
            <i class="bi bi-envelope me-1"></i>Email
        </label>
        <input asp-for="Email" class="form-control form-control-lg" placeholder="example@email.com" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MatKhau" class="form-label fw-semibold">
            <i class="bi bi-lock me-1"></i>Mật khẩu
        </label>
        <input asp-for="MatKhau" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
        <span asp-validation-for="MatKhau" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="XacNhanMatKhau" class="form-label fw-semibold">
            <i class="bi bi-lock-fill me-1"></i>Xác nhận mật khẩu
        </label>
        <input asp-for="XacNhanMatKhau" type="password" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu" />
        <span asp-validation-for="XacNhanMatKhau" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-danger btn-lg w-100 mb-3 fw-semibold">
        <i class="bi bi-check-circle me-2"></i>Đăng ký ngay
    </button>

    <div class="text-center">
        <span class="text-muted">Bạn đã có tài khoản?</span>
        <a asp-action="Login" asp-controller="Account" class="text-danger text-decoration-none fw-semibold ms-1">
            Đăng nhập ngay
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}