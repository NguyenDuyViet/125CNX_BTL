@{
    ViewData["Title"] = "Danh Sách Yêu Thích";
    Layout = "_Layout";

}

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách yêu thích</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold">Danh Sách Yêu Thích</h2>
            <p class="text-muted">Bạn có 5 sản phẩm trong danh sách yêu thích</p>
        </div>
        <div class="col-md-4 text-md-end">
            <button class="btn btn-outline-danger" onclick="clearWishlist()">
                <i class="bi bi-trash me-2"></i>Xóa tất cả
            </button>
        </div>
    </div>

    <!-- Wishlist Items -->
    <div class="row g-4">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm wishlist-item">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="~/images/wishlist-@(i).jpg" alt="Product @i" class="img-fluid rounded">
                            </div>
                            <div class="col-md-4">
                                <h5 class="fw-bold mb-2">Nike Air Jordan @(i)</h5>
                                <p class="text-muted mb-2">
                                    <small>Mã SP: SHOE@(1000 + i)</small>
                                </p>
                                <div class="mb-2">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-half text-warning"></i>
                                    <span class="text-muted ms-1">(4.5)</span>
                                </div>
                                <span class="badge bg-success">Còn hàng</span>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="mb-2">
                                    <span class="text-muted text-decoration-line-through">@((i * 300000).ToString("N0"))đ</span>
                                </div>
                                <h4 class="text-danger mb-0">@((i * 250000).ToString("N0"))đ</h4>
                                <small class="text-success">Tiết kiệm @((i * 50000).ToString("N0"))đ</small>
                            </div>
                            <div class="col-md-3 text-center">
                                <button class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                </button>
                                <button class="btn btn-outline-danger w-100" onclick="removeFromWishlist(@i)">
                                    <i class="bi bi-trash me-2"></i>Xóa
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty Wishlist State (Hidden by default) -->
    <div class="row mt-5 d-none" id="emptyWishlist">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="bi bi-heart" style="font-size: 5rem; color: #ddd;"></i>
                <h3 class="mt-4 mb-3">Danh sách yêu thích trống</h3>
                <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong danh sách yêu thích</p>
                <a href="/Product" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop me-2"></i>Khám phá sản phẩm
                </a>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="fw-bold mb-4">Có Thể Bạn Thích</h4>
        </div>
    </div>

    <div class="row g-4">
        @for (int i = 1; i <= 4; i++)
        {
            <div class="col-lg-3 col-md-6">
                <div class="card product-card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <img src="~/images/recommend-@(i).jpg" class="card-img-top" alt="Recommend @i">
                        <button class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 rounded-circle" onclick="addToWishlist()">
                            <i class="bi bi-heart"></i>
                        </button>
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2">-15%</span>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">Adidas Ultraboost @(20 + i)</h6>
                        <div class="mb-2">
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star text-warning"></i>
                            <span class="text-muted ms-1">(4.0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted text-decoration-line-through">@((i * 280000).ToString("N0"))đ</span>
                                <h5 class="text-danger mb-0">@((i * 240000).ToString("N0"))đ</h5>
                            </div>
                            <button class="btn btn-primary btn-sm">
                                <i class="bi bi-cart-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Share Wishlist -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center text-white p-5">
                    <h4 class="fw-bold mb-3">Chia Sẻ Danh Sách Yêu Thích</h4>
                    <p class="mb-4">Gửi danh sách yêu thích cho bạn bè và người thân</p>
                    <div class="d-flex justify-content-center gap-2">
                        <button class="btn btn-light">
                            <i class="bi bi-facebook me-2"></i>Facebook
                        </button>
                        <button class="btn btn-light">
                            <i class="bi bi-whatsapp me-2"></i>WhatsApp
                        </button>
                        <button class="btn btn-light">
                            <i class="bi bi-link-45deg me-2"></i>Copy Link
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .wishlist-item {
        transition: transform 0.3s;
    }

        .wishlist-item:hover {
            transform: translateX(5px);
        }

    .product-card {
        transition: transform 0.3s;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-card img {
            height: 200px;
            object-fit: cover;
        }
</style>

