        }
    }

    function clearWishlist() {
        if (confirm('Bạn có chắc muốn xóa tất cả sản phẩm trong danh sách yêu thích?')) {
            // Add your clear logic here
            document.getElementById('emptyWishlist').classList.remove('d-none');
        }
    }

