</section>

<!-- Flash Sale -->
<section class="flash-sale-section py-5" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);">
    <div class="container">
        <div class="row align-items-center text-white">
            <div class="col-md-6 mb-4 mb-md-0">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-lightning-fill fs-1 me-3"></i>
                    <div>
                        <h2 class="fw-bold mb-0">FLASH SALE</h2>
                        <p class="mb-0">Giảm đến 50% - Số lượng có hạn</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex justify-content-md-end align-items-center gap-3">
                    <span class="fs-5">Kết thúc sau:</span>
                    <div class="countdown d-flex gap-2">
                        <div class="countdown-item bg-white text-dark rounded px-3 py-2">
                            <div class="fw-bold fs-4">05</div>
                            <small>Giờ</small>
                        </div>
                        <div class="countdown-item bg-white text-dark rounded px-3 py-2">
                            <div class="fw-bold fs-4">32</div>
                            <small>Phút</small>
                        </div>
                        <div class="countdown-item bg-white text-dark rounded px-3 py-2">
                            <div class="fw-bold fs-4">18</div>
                            <small>Giây</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="featured-products py-5">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-2">Sản Phẩm Nổi Bật</h2>
                <p class="text-muted mb-0">Những mẫu giày được yêu thích nhất</p>
            </div>
            <a href="/Product" class="btn btn-outline-primary">
                Xem Tất Cả <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="row g-4">
            @for (int i = 1; i <= 8; i++)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card-modern">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="position-relative overflow-hidden">
                                <img src="~/images/product-@(i).jpg" class="card-img-top product-image" alt="Product @i">
                                <div class="product-badges">
                                    @if (i % 3 == 0)
                                    {
                                        <span class="badge bg-danger">-@((i * 5))%</span>
                                    }
                                    @if (i % 2 == 0)
                                    {
                                        <span class="badge bg-warning text-dark">HOT</span>
                                    }
                                </div>
                                <div class="product-overlay">
                                    <button class="btn btn-light btn-sm rounded-circle me-2" title="Yêu thích">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm rounded-circle me-2" title="Xem nhanh">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm rounded-circle" title="So sánh">
                                        <i class="bi bi-arrow-left-right"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <span class="badge bg-light text-dark border">Nike</span>
                                </div>
                                <h6 class="card-title mb-2">
                                    <a href="/Product/Details/@i" class="text-decoration-none text-dark">
                                        Nike Air Max @(2020 + i) Premium Edition
                                    </a>
                                </h6>
                                <div class="rating mb-2">
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        @if (j < 4)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star-half text-warning"></i>
                                        }
                                    }
                                    <span class="text-muted ms-1">(4.5)</span>
                                    <small class="text-muted ms-2">Đã bán @((i * 100))</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        @if (i % 3 == 0)
                                        {
                                            <span class="text-muted text-decoration-line-through me-2">@((i * 250000).ToString("N0"))đ</span>
                                        }
                                        <h5 class="text-danger mb-0 fw-bold">@((i * 200000).ToString("N0"))đ</h5>
                                    </div>
                                </div>
                                <button class="btn btn-primary w-100">
                                    <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

