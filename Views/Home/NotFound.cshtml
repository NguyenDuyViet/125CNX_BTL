@{
    ViewData["Title"] = "Không Tìm Thấy Trang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row min-vh-100 align-items-center justify-content-center">
        <div class="col-lg-6 text-center">
            <!-- 404 Illustration -->
            <div class="mb-4">
                <svg width="300" height="200" viewBox="0 0 300 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <!-- Shoe illustration -->
                    <ellipse cx="150" cy="180" rx="100" ry="15" fill="#E5E7EB" />
                    <path d="M80 140 Q 90 120, 110 115 L 190 115 Q 210 120, 220 140 L 210 155 Q 200 165, 180 165 L 120 165 Q 100 165, 90 155 Z" fill="#667eea" opacity="0.8" />
                    <path d="M110 115 L 190 115 L 185 100 Q 180 90, 170 85 L 130 85 Q 120 90, 115 100 Z" fill="#764ba2" opacity="0.8" />
                    <circle cx="140" cy="130" r="8" fill="white" />
                    <rect x="95" y="155" width="110" height="8" rx="4" fill="#4B5563" />

                    <!-- 404 Text -->
                    <text x="150" y="60" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="#667eea" text-anchor="middle">404</text>
                </svg>
            </div>

            <!-- Error Message -->
            <h1 class="display-4 fw-bold mb-3">Oops! Không Tìm Thấy Trang</h1>
            <p class="lead text-muted mb-4">
                Trang bạn đang tìm kiếm có thể đã bị xóa, đổi tên hoặc tạm thời không khả dụng.
            </p>

            <!-- Error Code -->
            <div class="alert alert-light border mb-4" role="alert">
                <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                <strong>Mã lỗi:</strong> 404 - Không tìm thấy trang
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center gap-3 mb-5">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-door me-2"></i>Về Trang Chủ
                </a>
                <button class="btn btn-outline-primary btn-lg" onclick="history.back()">
                    <i class="bi bi-arrow-left me-2"></i>Quay Lại
                </button>
            </div>

            <!-- Search Box -->
            <div class="card border-0 shadow-sm mx-auto" style="max-width: 500px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Tìm Kiếm Sản Phẩm</h5>
                    <form action="/Product/Search" method="get">
                        <div class="input-group input-group-lg">
                            <input type="text" name="keyword" class="form-control" placeholder="Tìm giày bạn cần...">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="mt-5">
                <h5 class="fw-bold mb-3">Hoặc xem các trang sau:</h5>
                <div class="d-flex flex-wrap justify-content-center gap-2">
                    <a href="/Product" class="btn btn-outline-secondary">
                        <i class="bi bi-bag me-1"></i>Sản phẩm
                    </a>
                    <a href="/Home/Contact" class="btn btn-outline-secondary">
                        <i class="bi bi-envelope me-1"></i>Liên hệ
                    </a>
                    <a href="/Home/Wishlist" class="btn btn-outline-secondary">
                        <i class="bi bi-heart me-1"></i>Yêu thích
                    </a>
                    <a href="/Cart" class="btn btn-outline-secondary">
                        <i class="bi bi-cart me-1"></i>Giỏ hàng
                    </a>
                </div>
            </div>

            <!-- Popular Products -->
            <div class="mt-5">
                <h5 class="fw-bold mb-4">Sản Phẩm Phổ Biến</h5>
                <div class="row g-3">
                    @for (int i = 1; i <= 3; i++)
                    {
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100">
                                <img src="~/images/popular-@(i).jpg" class="card-img-top" alt="Popular @i" style="height: 150px; object-fit: cover;">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">Nike Air Max @(2020 + i)</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="text-danger mb-0">@((i * 200000).ToString("N0"))đ</h6>
                                        <a href="/Product/Details/@i" class="btn btn-sm btn-primary">Xem</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Help Section -->
            <div class="mt-5 p-4" style="background-color: #f8f9fa; border-radius: 10px;">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-question-circle text-primary me-2"></i>Cần Trợ Giúp?
                </h5>
                <p class="text-muted mb-3">
                    Nếu bạn nghĩ đây là lỗi, vui lòng liên hệ với chúng tôi
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="tel:1900xxxx" class="text-decoration-none">
                        <i class="bi bi-telephone text-success"></i>
                        <span class="ms-1">1900 xxxx</span>
                    </a>
                    <a href="mailto:support@shoeshop.vn" class="text-decoration-none">
                        <i class="bi bi-envelope text-danger"></i>
                        <span class="ms-1">support@shoeshop.vn</span>
                    </a>
                    <a href="/Home/Contact" class="text-decoration-none">
                        <i class="bi bi-chat-dots text-primary"></i>
                        <span class="ms-1">Live Chat</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card:hover {
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }
</style>