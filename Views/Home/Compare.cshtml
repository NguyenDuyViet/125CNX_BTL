                                    <td class="text-center p-4">
                                        <button class="btn btn-primary w-100 mb-2">
                                            <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                        </button>
                                        <a href="/Product/Details/3" class="btn btn-outline-primary w-100">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add More Products -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-info-circle me-2"></i>
                <div>
                    Bạn có thể so sánh tối đa 4 sản phẩm.
                    <a href="/Product" class="alert-link ms-2">Thêm sản phẩm khác</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/home-compare.css" />
}