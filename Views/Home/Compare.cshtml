@{
    ViewData["Title"] = "So Sánh Sản Phẩm";
    Layout = "_Layout";

}

<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">So sánh sản phẩm</li>
                </ol>
            </nav>
            <h2 class="fw-bold">So Sánh Sản Phẩm</h2>
            <p class="text-muted">So sánh chi tiết các sản phẩm để lựa chọn phù hợp nhất</p>
        </div>
    </div>

    <!-- Compare Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead style="background-color: #f8f9fa;">
                                <tr>
                                    <th style="width: 200px;" class="p-4">Thông Tin</th>
                                    <th class="text-center p-4">
                                        <div class="position-relative d-inline-block">
                                            <img src="~/images/compare-1.jpg" alt="Product 1" class="img-fluid rounded" style="max-height: 180px;">
                                            <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                    </th>
                                    <th class="text-center p-4">
                                        <div class="position-relative d-inline-block">
                                            <img src="~/images/compare-2.jpg" alt="Product 2" class="img-fluid rounded" style="max-height: 180px;">
                                            <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                    </th>
                                    <th class="text-center p-4">
                                        <div class="position-relative d-inline-block">
                                            <img src="~/images/compare-3.jpg" alt="Product 3" class="img-fluid rounded" style="max-height: 180px;">
                                            <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="fw-bold p-4">Tên sản phẩm</td>
                                    <td class="text-center p-4">
                                        <h6>Nike Air Max 2024</h6>
                                    </td>
                                    <td class="text-center p-4">
                                        <h6>Adidas Ultra Boost</h6>
                                    </td>
                                    <td class="text-center p-4">
                                        <h6>Puma RS-X</h6>
                                    </td>
                                </tr>
                                <tr class="bg-light">
                                    <td class="fw-bold p-4">Giá bán</td>
                                    <td class="text-center p-4">
                                        <h5 class="text-danger mb-0">2.500.000đ</h5>
                                    </td>
                                    <td class="text-center p-4">
                                        <h5 class="text-danger mb-0">2.800.000đ</h5>
                                    </td>
                                    <td class="text-center p-4">
                                        <h5 class="text-danger mb-0">2.200.000đ</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold p-4">Đánh giá</td>
                                    <td class="text-center p-4">
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-half text-warning"></i>
                                        </div>
                                        <small class="text-muted">(4.5 - 256 đánh giá)</small>
                                    </td>
                                    <td class="text-center p-4">
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star text-warning"></i>
                                        </div>
                                        <small class="text-muted">(4.0 - 189 đánh giá)</small>
                                    </td>
                                    <td class="text-center p-4">
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        </div>
                                        <small class="text-muted">(5.0 - 142 đánh giá)</small>
                                    </td>
                                </tr>
                                <tr class="bg-light">
                                    <td class="fw-bold p-4">Thương hiệu</td>
                                    <td class="text-center p-4">Nike</td>
                                    <td class="text-center p-4">Adidas</td>
                                    <td class="text-center p-4">Puma</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold p-4">Chất liệu</td>
                                    <td class="text-center p-4">Da tổng hợp + Mesh</td>
                                    <td class="text-center p-4">Primeknit</td>
