@model _125CNX_ECommerce.Models.UserLoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}

<div class="text-center mb-4">
    <div class="mb-3">
        <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #dc3545;"></i>
    </div>
    <h2 class="fw-bold mb-2">Đăng Nhập</h2>
    <p class="text-muted">Chào mừng bạn quay trở lại!</p>
</div>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<form asp-action="Login" asp-controller="Account" method="post">

    <div class="mb-3">
        <label asp-for="TenDangNhap" class="form-label fw-semibold">
            <i class="bi bi-person me-1"></i>Tên đăng nhập
        </label>
        <input asp-for="TenDangNhap" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập" />
        <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="MatKhau" class="form-label fw-semibold">
            <i class="bi bi-lock me-1"></i>Mật khẩu
        </label>
        <input asp-for="MatKhau" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
        <span asp-validation-for="MatKhau" class="text-danger small"></span>
    </div>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="rememberMe">
            <label class="form-check-label" for="rememberMe">
                Ghi nhớ đăng nhập
            </label>
        </div>
        <a href="/Account/ForgotPassword" class="text-danger text-decoration-none small">
            Quên mật khẩu?
        </a>
    </div>

    <button type="submit" class="btn btn-danger btn-lg w-100 mb-3 fw-semibold">
        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
    </button>

    <div class="text-center">
        <span class="text-muted">Chưa có tài khoản?</span>
        <a asp-action="Register" asp-controller="Account" class="text-danger text-decoration-none fw-semibold ms-1">
            Đăng ký ngay
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
